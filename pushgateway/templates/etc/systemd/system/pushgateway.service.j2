# -*- mode: conf -*-

[Unit]
Description=The Prometheus Pushgateway exists to allow ephemeral and batch jobs to expose their metrics to Prometheus.
Documentation=https://github.com/prometheus/pushgateway
After=network.target

[Service]
EnvironmentFile=/etc/default/pushgateway
User={{ pushgateway_user }}
ExecStart={{ pushgateway_install_path }}/pushgateway/pushgateway $PUSHGATEWAY_OPTS
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=multi-user.target
